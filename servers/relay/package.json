    "@types/chai-http": "^4.2.0",
    "@types/core-js": "^2.5.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.24",
    "@types/ws": "^8.5.3",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "core-js": "^3.22.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
